# ============================================
# MC Status - Environment Configuration
# ============================================

# ============================================
# Database Configuration
# ============================================
# MongoDB connection URI
# Format: mongodb://[username:password@]host[:port]/database[?options]
# For Docker Compose: mongodb://admin:password@mongodb:27017/mcsrv?authSource=admin
# For local development: mongodb://localhost:27017/mcsrv
# Example: mongodb://admin:password@localhost:27017/mcsrv_dev?authSource=admin
MONGODB_URI=mongodb://admin:password@mongodb:27017/mcsrv?authSource=admin

# MongoDB Initialization (for Docker Compose)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_INITDB_DATABASE=mcsrv

# ============================================
# Authentication Configuration
# ============================================
# NextAuth.js secret key for JWT encryption (REQUIRED IN PRODUCTION)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production-use-openssl-rand-base64-32

# NextAuth URL (required for production)
# Should match your deployment URL
NEXTAUTH_URL=http://localhost:3000

# Application URL (used for links and redirects)
APP_URL=http://localhost:3000

# ============================================
# Default Admin Account (Optional)
# ============================================
# These credentials will be used to create an initial admin user on first run
# Leave empty to skip admin user creation
DEFAULT_ADMIN_EMAIL=admin@mcsrv.local
DEFAULT_ADMIN_PASSWORD=changeme123
DEFAULT_ADMIN_NAME="Admin User"

# ============================================
# Cloudflare Turnstile Configuration
# ============================================
# Get your keys from: https://dash.cloudflare.com/turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key-here
TURNSTILE_SECRET_KEY=your-turnstile-secret-key-here

# Enable/disable Cloudflare Turnstile protection (true/false)
NEXT_PUBLIC_ENABLE_TURNSTILE=false

# ============================================
# Rate Limiting Configuration
# ============================================
# Cooldown period between checks for the same server (in seconds)
# Default: 40 seconds (prevents server spam)
NEXT_PUBLIC_COOLDOWN_SECONDS=40

# Maximum requests per IP per minute (0 = unlimited)
# Default: 6 requests/minute
RATE_LIMIT_REQUESTS_PER_MINUTE=6

# Maximum requests per IP per hour (0 = unlimited)
# Default: 60 requests/hour
RATE_LIMIT_REQUESTS_PER_HOUR=60

# ============================================
# Server Configuration
# ============================================
# Server timeout for Minecraft server queries (milliseconds)
# Default: 10000 (10 seconds)
SERVER_QUERY_TIMEOUT=10000

# Maximum number of favorite servers per user
# Default: 50
MAX_FAVORITES_PER_USER=50

# Enable server status caching (true/false)
# Reduces load on Minecraft servers
ENABLE_SERVER_CACHE=true

# Server status cache duration (seconds)
# Default: 60 seconds
SERVER_CACHE_DURATION=60

# ============================================
# Feature Flags
# ============================================
# Enable/disable user registration
ENABLE_USER_REGISTRATION=true

# Enable/disable favorites feature (requires authentication)
ENABLE_FAVORITES=true

# Enable/disable community features (requires authentication)
ENABLE_COMMUNITY_FEATURES=false

# Enable/disable server notifications (requires authentication)
ENABLE_NOTIFICATIONS=false

# ============================================
# Email Configuration (For Notifications)
# ============================================
# SMTP server settings (required for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_NAME=MC Status
SMTP_FROM_EMAIL=noreply@mcsrv.local

# ============================================
# Discord Webhook Configuration
# ============================================
# Discord webhook URL for server notifications
# Get from: Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# ============================================
# Analytics & Monitoring (Optional)
# ============================================
# Google Analytics Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# Development Settings
# ============================================
# Enable debug logging (true/false)
DEBUG_MODE=false

# Enable API request logging
LOG_API_REQUESTS=true

# Node environment (development/production/test)
NODE_ENV=development
